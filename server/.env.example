# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/bookfast

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bookfast?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Change this to a strong random string in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_a_long_random_string
JWT_EXPIRE=7d

# Client URL (for CORS)
# Development:
CLIENT_URL=https://book-fast.vercel.app/
# Production:
# CLIENT_URL=https://your-frontend-domain.com

# Email Configuration (Optional - for booking confirmations)
# Gmail example:
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=BookFast <noreply@bookfast.com>

# SendGrid example:
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your_sendgrid_api_key

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# API Configuration
API_URL=http://localhost:5001
